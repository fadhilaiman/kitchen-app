<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title><%= recipe.name %> Ingredient List</title>
    <style type="text/css">
    
    body {
    text-align: center;
    }
    form {
        display: inline-block;
    }
  
    </style>
</head>
<body>
    <a href="/"><button>Home</button></a>
    <a href="/recipes"><button>Back to Recipes</button></a>
    <br>
    <br>
    <h1><%= recipe.name %></h1>
    <br>
    <img src="<%= recipe.urlLink %>" width="195" height="230" />
    <br>

    <h1>Add Ingredient</h1>
    <br>
     <!-- Ingredient add form -->
     <div class="form">
        <form action="/recipes/ingredients/add/<%= recipe.id %>" method="POST" class="form-example">
            
            <div class="form-example">
                <label>Ingredient:</label><br>
                <select name="IngredientId">
                    <% ingredients.forEach(el => { %>
                    <option placeholder="ex: telur" value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                </select>
            </div>
                <div class="form-example">
                <label for="amount">Amount: </label>
                <br>
                <input type="number" name="amount" id="amount" placeholder="ex: 5">
              </div>
            <div class="form-example">
                <button type="submit" value="submit">Add</button>
            </div>
        </form>
    </div>
    <br>

    <!-- table ingredient dari recipe -->
    <table style="width:70%">
        <thead>
          <tr>
            <th>Ingredient</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
          <% recipe.Ingredients.forEach(el => { %>
          <tr>
                <td><%= el.name %></td>
                <td><%= el.RecipeIngredient.amount %></td>
          </tr>
          <% }) %>
        </tbody>
    </table>


</body>
</html>